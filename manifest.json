{
    "manifest_version": 3,
    "name": "ZooKeeper (Oracle NetSuite Extension)",
    "description": "ZooKeeper is an application that adds helpful UI features to NetSuite.",
    "version": "2.0.3",
    "icons": {
        "16": "img/logo/With Backgrounds/16px/zookeeper-icon-yellow-blue-16px.png",
        "48": "img/logo/With Backgrounds/48px/zookeeper-icon-yellow-blue-48px.png",
        "128": "img/logo/With Backgrounds/128px/zookeeper-icon-yellow-blue-128px.png"
    },
    "options_ui": {
        "page": "src/Configuration/zkpr_config.html",
        "open_in_tab": true
    },
    "content_scripts": [
        {
            "matches": ["https://*.app.netsuite.com/*"],
            "exclude_matches": [
                "*://*/*help/helpcenter*",
                "*://*/*login/secure*",
                "*://*/*pages/nllogoutnoback.jsp*",
                "*://*/*admin/cacheinvalidationrequest*",
                "*://*/*admin/cms-login.jsp*",
                "*://*/*recordscatalog/rcbrowser.nl*",
                "*://*/*&l=T*",
                "*://*/*site.setup.NLFieldsetEntryForm*",
                "*://*/*setup/adminmessage.nl*",
                "*://*/*ifrmcntnr=T*",
                "*://*/*print/hotprint.nl?*",
                "*://*/*addShortcut.nl?*",
                "*://*/*assistants/matrixitem.nl?*",
                "*://*/*profiles/caseprofile.nl*"
            ],
            "js": ["src/ContentScripts/zkpr_index.tsx"],
            "runAt": "document_start"
        }
    ],
    "web_accessible_resources": [
        {
            "matches": ["https://*.app.netsuite.com/*"],
            "resources": ["/img/*"]
        },
        {
            "matches": ["https://*.app.netsuite.com/*"],
            "resources": ["/js/*"]
        },
        {
            "matches": ["https://*.app.netsuite.com/*"],
            "resources": ["/themes/*"]
        }
    ],
    "permissions": ["activeTab", "storage"],
    "background": {
        "service_worker": "src/ContentScripts/ServiceWorker.tsx"
    },
    "action": {
        "default_title": "ZooKeeper",
        "default_popup": "src/Popup/zkpr_popup_index.html",
        "default_icon": {
            "16": "img/logo/With Backgrounds/16px/zookeeper-icon-yellow-blue-16px.png",
            "24": "img/logo/With Backgrounds/24px/zookeeper-icon-yellow-blue-24px.png",
            "32": "img/logo/With Backgrounds/32px/zookeeper-icon-yellow-blue-32px.png"
        }
    }
}
